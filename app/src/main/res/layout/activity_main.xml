<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/mainRl"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/main_shape">

            <TextView
                android:id="@+id/app_nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:elevation="10dp"
                android:fontFamily="@font/popins_semibold"
                android:text="LMS"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/app_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_nameTv"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="-15dp"
                android:fontFamily="@font/popins_semibold"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/app_nameTv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:elevation="10dp"
                android:src="@drawable/students" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_below="@id/app_nameTv"
                android:layout_centerHorizontal="true"
                android:elevation="10dp"
                android:src="@drawable/girl" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detailRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainRl">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/welcome_text"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="17sp"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/descriptionTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/welcome_description"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/getStartedBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/cardView"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/gradient_button"
                android:fontFamily="@font/popins_semibold"
                android:gravity="center"
                android:text="Get Started"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/signInBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/getStartedBtn"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/stroke_button_bg"
                android:fontFamily="@font/popins_semibold"
                android:gravity="center"
                android:text="Sign In"
                android:textColor="@color/blue"
                android:textSize="20sp" />

        </RelativeLayout>


    </RelativeLayout>

</ScrollView>